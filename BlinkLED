#include "TimerObject.h"

    
#define red 3
#define green 9
#define blue 10
#define delaya 2

int g_iR = 0;
int g_iG = 0;
int g_iB = 0;
int g_iRratio = 2.56;
int g_iGratio = 2.56;
int g_iBratio = 2.56;
int g_bpm = 122;
Timer *timer1 = new Timer(480);

void setup() 
{
  timer1->setOnTimer(&pulseLED);
  timer1->Start();
  pinMode(red, OUTPUT);
  pinMode(green, OUTPUT);
  pinMode(blue, OUTPUT);
}

void pulseLED()
{
  for (int i=0, i<100, i++)
  {
    g_iR = g_iR + (i * 1.6);
    g_iG = g+iG + 0;
    g_iB = g_iB + (i * 2.35);
    analogWrite(red,g_iR);
    analogWrite(green,g_iG);
    analogWrite(blue,g_iB);
  }
  delay(500)
}

void button1push()
{ 
  
  g_iRratio = 1.6;
  g_iGratio = 0;
  g_iBratio = 2.35;
}

void button2push()
{ 
  
  g_iRratio = 0;
  g_iGratio = 0;
  g_iBratio = 2.00;
}

void rotaryPot()
{
  g_bpm = 125;
  
}

void loop()
{
  timer1->Update();
}
